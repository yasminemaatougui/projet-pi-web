{% extends 'base.html.twig' %}

{% block title %}Gestion des Dons{% endblock %}

{% block body %}
    <h1>Tous les Dons</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            {# Dynamic Sorting Links #}
            <th>
                <a href="{{ path('app_donation_index', {'sort': 'dateDon', 'direction': currentDirection == 'DESC' ? 'ASC' : 'DESC'}) }}">
                    Date {% if currentSort == 'dateDon' %}{{ currentDirection == 'DESC' ? '↓' : '↑' }}{% endif %}
                </a>
            </th>
            <th>
                <a href="{{ path('app_donation_index', {'sort': 'donateur', 'direction': currentDirection == 'DESC' ? 'ASC' : 'DESC'}) }}">
                    Donateur {% if currentSort == 'donateur' %}{{ currentDirection == 'DESC' ? '↓' : '↑' }}{% endif %}
                </a>
            </th>
            <th>
                <a href="{{ path('app_donation_index', {'sort': 'type', 'direction': currentDirection == 'DESC' ? 'ASC' : 'DESC'}) }}">
                    Type {% if currentSort == 'type' %}{{ currentDirection == 'DESC' ? '↓' : '↑' }}{% endif %}
                </a>
            </th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.dateDon|date('d/m/Y H:i') }}</td>
                <td>{{ donation.donateur.prenom }} {{ donation.donateur.nom }}</td>
                <td><span class="badge bg-info">{{ donation.type.libelle }}</span></td>
                <td>{{ donation.description }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('app_donation_edit', {'id': donation.id}) }}" class="btn btn-sm btn-warning">Modifier</a>

                        {# Delete form with CSRF protection #}
                        <form method="post" action="{{ path('app_donation_delete', {'id': donation.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce don ?');" style="display:inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donation.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun don enregistré.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
