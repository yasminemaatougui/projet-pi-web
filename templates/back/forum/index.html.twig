{% extends 'back/base_back.html.twig' %}

{% block title %}Gestion des Forums{% endblock %}

{% block page_title %}Gestion des Forums{% endblock %}

{% block body %}
<div class="container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Forums</h1>
        <a href="{{ path('admin_forum_new') }}" class="btn btn-primary">
            Nouvelle Discussion
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" 
                           placeholder="Rechercher..." 
                           value="{{ search }}">
                </div>
                <div class="col-md-3">
                    <select name="sort" class="form-select">
                        <option value="dateCreation" {% if sortBy == 'dateCreation' %}selected{% endif %}>
                            Date
                        </option>
                        <option value="sujet" {% if sortBy == 'sujet' %}selected{% endif %}>
                            Sujet
                        </option>
                        <option value="nom" {% if sortBy == 'nom' %}selected{% endif %}>
                            Auteur
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="order" class="form-select">
                        <option value="DESC" {% if order == 'DESC' %}selected{% endif %}>
                            Récent
                        </option>
                        <option value="ASC" {% if order == 'ASC' %}selected{% endif %}>
                            Ancien
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        Rechercher
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Forums List -->
    <div class="card">
        <div class="card-body p-0">
            {% if forums|length > 0 %}
                <table class="table">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="35%">Sujet</th>
                            <th width="20%">Auteur</th>
                            <th width="15%">Date</th>
                            <th width="15%">Message</th>
                            <th width="10%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for forum in forums %}
                            <tr>
                                <td class="text-center">
                                    <span class="badge badge-secondary">{{ forum.id }}</span>
                                </td>
                                <td>
                                    <a href="{{ path('admin_forum_show', {'id': forum.id}) }}" 
                                       class="text-decoration-none fw-bold">
                                        {{ forum.sujet }}
                                    </a>
                                    <br>
                                    <small class="text-muted">{{ forum.email }}</small>
                                </td>
                                <td>
                                    <strong>{{ forum.prenom }} {{ forum.nom }}</strong>
                                </td>
                                <td>
                                    {{ forum.dateCreation ? forum.dateCreation|date('d/m/Y H:i') : '' }}
                                </td>
                                <td>
                                    <span class="text-muted">
                                        {{ forum.message|length > 60 ? forum.message|slice(0, 60) ~ '...' : forum.message }}
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-1">
                                        <a href="{{ path('admin_forum_show', {'id': forum.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            Voir
                                        </a>
                                        <a href="{{ path('admin_forum_edit', {'id': forum.id}) }}" 
                                           class="btn btn-sm btn-outline-secondary">
                                            Modifier
                                        </a>
                                        <form method="post" action="{{ path('admin_forum_delete', {'id': forum.id}) }}" 
                                              style="display: inline;" 
                                              onsubmit="return confirm('Êtes-vous sûr ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="text-center py-5">
                    <h5 class="text-muted">Aucune discussion trouvée</h5>
                    <p class="text-muted mb-4">
                        {% if search %}
                            Aucune discussion ne correspond à votre recherche.
                        {% else %}
                            Aucune discussion pour le moment.
                        {% endif %}
                    </p>
                    <a href="{{ path('admin_forum_new') }}" class="btn btn-primary">
                        Créer une discussion
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Pagination Info -->
    {% if forums|length > 0 %}
    <div class="mt-3 text-center">
        <small class="text-muted">{{ forums|length }} discussion(s)</small>
    </div>
    {% endif %}
</div>
{% endblock %}
