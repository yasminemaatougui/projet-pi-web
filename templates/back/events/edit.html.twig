{% extends 'back/base_back.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Modifier : {{ evenement.titre }}</h3>
                </div>
                <div class="card-body">
                    {{ include('evenement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    
                    {{ include('evenement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
