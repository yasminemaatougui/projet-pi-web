{% extends 'back/base_back.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container">
    <!-- Header -->
    <div class="header-section">
        <div>
            <h1>Tableau de bord</h1>
            <p>Bienvenue, {{ app.user ? app.user.prenom : '' }}</p>
        </div>
        <div class="date-badge">
            {{ "now"|date("d/m/Y H:i") }}
        </div>
    </div>

    <!-- Statistics -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number">{{ stats.users }}</div>
            <div class="stat-label">Utilisateurs</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-number">{{ stats.forums }}</div>
            <div class="stat-label">Forums</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-number">{{ stats.events }}</div>
            <div class="stat-label">Événements</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-number">{{ stats.products }}</div>
            <div class="stat-label">Produits</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-number">{{ stats.donations }}</div>
            <div class="stat-label">Dons</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-number">{{ stats.orders }}</div>
            <div class="stat-label">Commandes</div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="content-grid">
        <!-- Forums -->
        <div class="content-card">
            <div class="card-header">
                <h3>Discussions récentes</h3>
                <a href="{{ path('admin_forum_index') }}" class="btn-link">Voir tout</a>
            </div>
            <div class="card-content">
                {% if latestForums|length > 0 %}
                    {% for forum in latestForums %}
                        <div class="item">
                            <div class="item-title">
                                <a href="{{ path('admin_forum_show', {'id': forum.id}) }}">{{ forum.sujet }}</a>
                            </div>
                            <div class="item-meta">
                                {{ forum.prenom }} {{ forum.nom }} • {{ forum.dateCreation ? forum.dateCreation|date('d/m H:i') : '' }}
                            </div>
                            <div class="item-desc">
                                {{ forum.message|length > 100 ? forum.message|slice(0, 100) ~ '...' : forum.message }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-text">Aucune discussion</div>
                        <a href="{{ path('admin_forum_new') }}" class="btn-link">Créer une discussion</a>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Événements -->
        <div class="content-card">
            <div class="card-header">
                <h3>Événements récents</h3>
                <a href="{{ path('admin_evenement_index') }}" class="btn-link">Voir tout</a>
            </div>
            <div class="card-content">
                {% if latestEvents|length > 0 %}
                    {% for event in latestEvents %}
                        <div class="item">
                            <div class="item-title">
                                <a href="{{ path('admin_evenement_show', {'id': event.id}) }}">{{ event.titre }}</a>
                            </div>
                            <div class="item-meta">
                                {{ event.lieu }} • {{ event.createdAt ? event.createdAt|date('d/m H:i') : '' }}
                            </div>
                            <div class="item-desc">
                                {{ event.description|length > 100 ? event.description|slice(0, 100) ~ '...' : event.description }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-text">Aucun événement</div>
                        <a href="{{ path('admin_evenement_new') }}" class="btn-link">Créer un événement</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="content-grid">
        <!-- Produits -->
        <div class="content-card">
            <div class="card-header">
                <h3>Produits récents</h3>
                <a href="{{ path('app_produit_admin_index') }}" class="btn-link">Voir tout</a>
            </div>
            <div class="card-content">
                {% if latestProducts|length > 0 %}
                    {% for product in latestProducts %}
                        <div class="item">
                            <div class="item-title">{{ product.nom }}</div>
                            <div class="item-meta">{{ product.prix }} € • Stock: {{ product.stock }}</div>
                            <div class="item-desc">
                                {{ product.description|length > 80 ? product.description|slice(0, 80) ~ '...' : product.description }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-text">Aucun produit</div>
                        <a href="{{ path('app_produit_new') }}" class="btn-link">Ajouter un produit</a>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Dons -->
        <div class="content-card">
            <div class="card-header">
                <h3>Dons récents</h3>
                <a href="{{ path('app_donation_index') }}" class="btn-link">Voir tout</a>
            </div>
            <div class="card-content">
                {% if latestDonations|length > 0 %}
                    {% for donation in latestDonations %}
                        <div class="item">
                            <div class="item-title">{{ donation.montant }} €</div>
                            <div class="item-meta">
                                {{ donation.typeDon ? donation.typeDon.nom : 'Général' }} • 
                                {{ donation.dateDon ? donation.dateDon|date('d/m H:i') : '' }}
                            </div>
                            <div class="item-desc">
                                {{ donation.donateur ? donation.donateur.email : 'Anonyme' }}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-text">Aucun don</div>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Commandes -->
        <div class="content-card">
            <div class="card-header">
                <h3>Commandes récentes</h3>
                <a href="#" class="btn-link">Voir tout</a>
            </div>
            <div class="card-content">
                {% if latestOrders|length > 0 %}
                    {% for order in latestOrders %}
                        <div class="item">
                            <div class="item-title">Commande #{{ order.id }}</div>
                            <div class="item-meta">{{ order.total }} € • {{ order.statut }}</div>
                            <div class="item-desc">
                                {{ order.user ? order.user.email : 'Client inconnu' }} • 
                                {{ order.ligneCommandes|length }} article(s)
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">
                        <div class="empty-text">Aucune commande</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="actions-section">
        <h3>Actions rapides</h3>
        <div class="actions-grid">
            <a href="{{ path('admin_forum_new') }}" class="action-btn">Nouveau Forum</a>
            <a href="{{ path('admin_evenement_new') }}" class="action-btn">Nouvel Événement</a>
            <a href="{{ path('app_produit_new') }}" class="action-btn">Nouveau Produit</a>
            <a href="{{ path('app_user_index') }}" class="action-btn">Gérer les Utilisateurs</a>
        </div>
    </div>
</div>

<style>
/* Simple and Clean Design */
body {
    background: #f8f9fa;
    font-family: Arial, sans-serif;
    color: #333;
    margin: 0;
    padding: 20px;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Header */
.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid #e9ecef;
}

.header-section h1 {
    margin: 0;
    font-size: 28px;
    color: #000;
}

.header-section p {
    margin: 5px 0 0 0;
    color: #666;
    font-size: 14px;
}

.date-badge {
    background: #000;
    color: #fff;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 12px;
}

/* Statistics */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.stat-card {
    background: #fff;
    padding: 30px;
    text-align: center;
    border: 1px solid #e9ecef;
    border-radius: 8px;
}

.stat-number {
    font-size: 32px;
    font-weight: bold;
    color: #002395; /* Bleu français */
    margin-bottom: 8px;
}

.stat-label {
    font-size: 14px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Content Cards */
.content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
}

.content-card {
    background: #fff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
}

.card-header {
    padding: 20px;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.card-header h3 {
    margin: 0;
    font-size: 16px;
    color: #000;
}

.btn-link {
    color: #002395;
    text-decoration: none;
    font-size: 14px;
    border: 1px solid #002395;
    padding: 6px 12px;
    border-radius: 4px;
    transition: all 0.2s;
}

.btn-link:hover {
    background: #002395;
    color: #fff;
}

.card-content {
    padding: 20px;
}

.item {
    padding: 15px 0;
    border-bottom: 1px solid #f8f9fa;
}

.item:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.item-title {
    margin-bottom: 8px;
}

.item-title a {
    color: #000;
    text-decoration: none;
    font-weight: bold;
    font-size: 14px;
}

.item-title a:hover {
    color: #002395;
}

.item-meta {
    font-size: 12px;
    color: #666;
    margin-bottom: 8px;
}

.item-desc {
    font-size: 13px;
    color: #333;
    line-height: 1.4;
}

.empty-state {
    text-align: center;
    padding: 40px 20px;
}

.empty-text {
    color: #666;
    margin-bottom: 15px;
}

/* Actions */
.actions-section {
    background: #fff;
    padding: 30px;
    border: 1px solid #e9ecef;
    border-radius: 8px;
}

.actions-section h3 {
    margin: 0 0 20px 0;
    color: #000;
}

.actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.action-btn {
    display: block;
    background: #fff;
    color: #002395;
    text-decoration: none;
    padding: 15px;
    border: 2px solid #002395;
    border-radius: 6px;
    text-align: center;
    font-weight: bold;
    transition: all 0.2s;
}

.action-btn:hover {
    background: #002395;
    color: #fff;
}

/* Responsive */
@media (max-width: 768px) {
    .header-section {
        flex-direction: column;
        text-align: center;
        gap: 15px;
    }
    
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .content-grid {
        grid-template-columns: 1fr;
    }
    
    .actions-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}
