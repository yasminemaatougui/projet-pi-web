{% extends 'back/base_back.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-secondary">{{ role|replace({'ROLE_': ''}) }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Éditer</a>
        {{ include('back/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
