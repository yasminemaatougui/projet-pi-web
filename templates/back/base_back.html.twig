    {% block stylesheets %}
<style>
/* Reset and Base */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    background: #f8f9fa;
    color: #333;
    display: flex;
    min-height: 100vh;
}

/* Sidebar */
.sidebar {
    width: 260px;
    background: #000;
    color: #fff;
    padding: 0;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
}

.sidebar-header {
    padding: 20px;
    background: #000;
    border-bottom: 1px solid #333;
}

.sidebar-brand {
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
    display: block;
}

.sidebar-subtitle {
    color: #666;
    font-size: 12px;
    margin-top: 5px;
}

.sidebar-menu {
    list-style: none;
    padding: 20px 0;
}

.sidebar-menu-item {
    margin: 2px 0;
}

.sidebar-link {
    color: #fff;
    text-decoration: none;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    transition: background 0.2s;
    font-size: 14px;
}

.sidebar-link:hover {
    background: #002395;
}

.sidebar-link.active {
    background: #002395;
}

.sidebar-icon {
    font-size: 16px;
    width: 20px;
    text-align: center;
}

/* Main Content */
.main-content {
    flex: 1;
    margin-left: 260px;
    display: flex;
    flex-direction: column;
}

.topbar {
    background: #fff;
    padding: 20px;
    border-bottom: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.topbar-title {
    font-size: 24px;
    font-weight: 600;
    color: #000;
}

.topbar-actions {
    display: flex;
    gap: 15px;
    align-items: center;
}

.btn-front {
    padding: 10px 20px;
    background: #002395;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    transition: background 0.2s;
}

.btn-front:hover {
    background: #001a75;
}

.content-area {
    flex: 1;
    padding: 30px;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Common Elements */
h1, h2, h3, h4, h5, h6 {
    color: #000;
    margin-bottom: 20px;
}

h1 { font-size: 28px; }
h2 { font-size: 24px; }
h3 { font-size: 20px; }
h4 { font-size: 18px; }
h5 { font-size: 16px; }
h6 { font-size: 14px; }

p {
    color: #666;
    line-height: 1.5;
    margin-bottom: 15px;
}

/* Cards */
.card {
    background: #fff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 20px;
}

.card-header {
    padding: 20px;
    border-bottom: 1px solid #e9ecef;
    background: #f8f9fa;
}

.card-body {
    padding: 20px;
}

/* Tables */
.table {
    width: 100%;
    border-collapse: collapse;
    background: #fff;
}

.table th {
    background: #f8f9fa;
    padding: 12px;
    text-align: left;
    font-weight: 600;
    color: #000;
    border-bottom: 1px solid #e9ecef;
}

.table td {
    padding: 12px;
    border-bottom: 1px solid #f8f9fa;
}

.table tbody tr:hover {
    background: #f8f9fa;
}

/* Buttons */
.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
}

.btn-primary {
    background: #002395;
    color: #fff;
}

.btn-primary:hover {
    background: #001a75;
}

.btn-secondary {
    background: #666;
    color: #fff;
}

.btn-secondary:hover {
    background: #555;
}

.btn-outline-primary {
    background: #fff;
    color: #002395;
    border: 1px solid #002395;
}

.btn-outline-primary:hover {
    background: #002395;
    color: #fff;
}

.btn-outline-secondary {
    background: #fff;
    color: #666;
    border: 1px solid #666;
}

.btn-outline-secondary:hover {
    background: #666;
    color: #fff;
}

.btn-sm {
    padding: 6px 12px;
    font-size: 12px;
}

/* Forms */
.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    font-size: 14px;
}

.form-control:focus {
    outline: none;
    border-color: #002395;
}

.form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: 600;
    color: #000;
}

.form-select {
    width: 100%;
    padding: 10px;
    border: 1px solid #e9ecef;
    border-radius: 4px;
    font-size: 14px;
    background: #fff;
}

/* Alerts */
.alert {
    padding: 15px;
    border-radius: 4px;
    margin-bottom: 20px;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-warning {
    background: #fff3cd;
    color: #856404;
    border: 1px solid #ffeaa7;
}

.alert-danger {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.alert-info {
    background: #d1ecf1;
    color: #0c5460;
    border: 1px solid #bee5eb;
}

/* Badges */
.badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
}

.badge-primary {
    background: #002395;
    color: #fff;
}

.badge-secondary {
    background: #666;
    color: #fff;
}

.badge-success {
    background: #28a745;
    color: #fff;
}

.badge-warning {
    background: #ffc107;
    color: #000;
}

.badge-danger {
    background: #dc3545;
    color: #fff;
}

/* Utilities */
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-muted { color: #666; }
.text-primary { color: #002395; }
.text-success { color: #28a745; }
.text-warning { color: #ffc107; }
.text-danger { color: #dc3545; }

.mb-1 { margin-bottom: 5px; }
.mb-2 { margin-bottom: 10px; }
.mb-3 { margin-bottom: 15px; }
.mb-4 { margin-bottom: 20px; }
.mb-5 { margin-bottom: 25px; }

.mt-1 { margin-top: 5px; }
.mt-2 { margin-top: 10px; }
.mt-3 { margin-top: 15px; }
.mt-4 { margin-top: 20px; }
.mt-5 { margin-top: 25px; }

.d-flex { display: flex; }
.align-items-center { align-items: center; }
.justify-content-between { justify-content: space-between; }
.justify-content-center { justify-content: center; }

.gap-1 { gap: 5px; }
.gap-2 { gap: 10px; }
.gap-3 { gap: 15px; }

/* Grid System */
.row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -10px;
}

.col {
    padding: 0 10px;
    flex: 1;
}

.col-md-6 {
    flex: 0 0 50%;
    max-width: 50%;
}

.col-md-4 {
    flex: 0 0 33.333333%;
    max-width: 33.333333%;
}

.col-md-3 {
    flex: 0 0 25%;
    max-width: 25%;
}

.col-md-2 {
    flex: 0 0 16.666667%;
    max-width: 16.666667%;
}

/* Responsive */
@media (max-width: 768px) {
    .sidebar {
        width: 200px;
    }
    
    .main-content {
        margin-left: 200px;
    }
    
    .topbar-title {
        font-size: 20px;
    }
    
    .content-area {
        padding: 20px;
    }
    
    .col-md-6,
    .col-md-4,
    .col-md-3,
    .col-md-2 {
        flex: 0 0 100%;
        max-width: 100%;
    }
}

@media (max-width: 576px) {
    .sidebar {
        width: 100%;
        position: relative;
        height: auto;
    }
    
    .main-content {
        margin-left: 0;
    }
    
    .topbar {
        flex-direction: column;
        gap: 15px;
        text-align: center;
    }
}
</style>
{% endblock %}
