                            <a href="{{ path('login') }}">Connectez-vous</a> pour r√©server.
                        </div>
                    {% endif %}
                </div>
            </div>

            {% if app.user and (app.user == evenement.organisateur or is_granted('ROLE_ADMIN')) %}
                <div class="card shadow mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Administration</h5>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning">Modifier</a>
                            {{ include('evenement/_delete_form.html.twig') }}
                        </div>
                    </div>
