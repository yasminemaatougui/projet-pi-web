                    <div class="mb-4">
                        <h5>Description</h5>
                        <p class="lead">{{ evenement.description }}</p>
                    </div>

                    <hr>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded me-3">
                                    üìç
                                </div>
                                <div>
                                    <small class="text-muted">Lieu</small>
