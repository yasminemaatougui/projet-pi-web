{% extends 'base.html.twig' %}

{% block title %}Statistiques Administrateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .stat-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 20px;
            border: none;
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
            pointer-events: none;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }
        .stat-card .card-body {
            padding: 1.5rem;
            position: relative;
            z-index: 1;
        }
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
            text-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }
        .stat-label {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }
        .stat-percentage {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 400;
            opacity: 0.9;
        }
        .stat-card .card-icon {
            position: absolute;
            right: 1.5rem;
            top: 1.5rem;
            font-size: 2.5rem;
            opacity: 0.2;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Tableau de bord d'administration</h1>
            <div class="btn-group" role="group">
                <button class="btn btn-outline-primary">
                    <i class="fas fa-filter me-1"></i> Filtrer
                </button>
                <button class="btn btn-outline-secondary">
                    <i class="fas fa-sync-alt me-1"></i> Réinitialiser
                </button>
                <button id="toggleStatsBtn" class="btn btn-primary" onclick="toggleStats()">
                </button>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-3 mb-4">
                <div class="card stat-card" style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);">
                    <div class="card-body">
                        <i class="fas fa-calendar-check card-icon"></i>
                        <div class="stat-number">{{ totalReservations ?? 0 }}</div>
                        <div class="stat-label">Réservations totales</div>
                        {% if totalReservations > 0 %}
                            <div class="stat-percentage">100% du total</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card stat-card" style="background: linear-gradient(135deg, #36b9cc 0%, #1a6b76 100%);">
                    <div class="card-body">
                        <i class="fas fa-calendar-day card-icon"></i>
                        <div class="stat-number">{{ reservationsThisMonth ?? 0 }}</div>
                        <div class="stat-label">Réservations (mois)</div>
                        {% if totalReservations > 0 %}
                            {% set percentage = ((reservationsThisMonth / totalReservations) * 100)|round(1) %}
                            <div class="stat-percentage">{{ percentage }}% des réservations</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card stat-card" style="background: linear-gradient(135deg, #4e9ef8 0%, #2a6fd6 100%);">
                    <div class="card-body">
                        <i class="fas fa-users card-icon"></i>
                        <div class="stat-number">{{ totalUsers ?? 0 }}</div>
                        <div class="stat-label">Utilisateurs</div>
                        {% if totalUsers > 0 %}
                            {% set percentage = ((totalUsers / (totalUsers + 10)) * 100)|round(1) %}
                            <div class="stat-percentage">{{ percentage }}% de la capacité</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card stat-card" style="background: linear-gradient(135deg, #7ab4ff 0%, #4e9ef8 100%);">
                    <div class="card-body">
                        <i class="fas fa-user-plus card-icon"></i>
                        <div class="stat-number">{{ newUsersThisMonth ?? 0 }}</div>
                        <div class="stat-label">Nouveaux (mois)</div>
                        {% if totalUsers > 0 %}
                            {% set percentage = ((newUsersThisMonth / totalUsers) * 100)|round(1) %}
                            <div class="stat-percentage">+{{ percentage }}% ce mois</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Réservations par statut</h5>
                    </div>
                    <div class="card-body">
                        <div style="height: 300px;">
                            <canvas id="reservationsChart"></canvas>
                        </div>
                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reservationsDetailsModal">
                                <i class="fas fa-table me-1"></i> Voir le détail
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Utilisateurs par rôle</h5>
                    </div>
                    <div class="card-body">
                        <div style="height: 300px;">
                            <canvas id="usersChart"></canvas>
                        </div>
                        <div class="text-center mt-3 d-flex justify-content-center gap-2">
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#usersDetailsModal">
                                <i class="fas fa-table me-1"></i> Voir le détail
                            </button>
                            <button type="button" class="btn btn-outline-success" onclick="showUserStats()">
                                <i class="fas fa-chart-pie me-1"></i> Statistiques
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!-- Modal pour les détails des réservations -->
    <div class="modal fade" id="reservationsDetailsModal" tabindex="-1" aria-labelledby="reservationsDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationsDetailsModalLabel">Détails des réservations par statut</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Statut</th>
                                <th class="text-end">Nombre</th>
                                <th class="text-end">Pourcentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set total = reservationsByStatus|reduce((sum, item) => sum + item.count, 0) %}
                            {% for item in reservationsByStatus|sort((a, b) => b.count <=> a.count) %}
                                <tr>
                                    <td>{{ item.status }}</td>
                                    <td class="text-end">{{ item.count|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end">{{ total > 0 ? ((item.count / total) * 100)|number_format(2, ',', ' ') }}%</td>
                                </tr>
                            {% endfor %}
                            <tr class="table-active fw-bold">
                                <td>Total</td>
                                <td class="text-end">{{ total|number_format(0, ',', ' ') }}</td>
                                <td class="text-end">100%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les statistiques utilisateurs -->
<div class="modal fade" id="userStatsModal" tabindex="-1" aria-labelledby="userStatsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="userStatsModalLabel">Statistiques des Utilisateurs</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title text-muted">Total Utilisateurs</h6>
                                <h3 class="text-primary">{{ totalUsers ?? 0 }}</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title text-muted">Nouveaux ce mois</h6>
                                <h3 class="text-success">{{ newUsersThisMonth ?? 0 }}</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6>Répartition par rôle</h6>
                        <div style="height: 250px;">
                            <canvas id="userRoleChart"></canvas>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Détails par rôle</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Rôle</th>
                                        <th class="text-end">Nombre</th>
                                        <th class="text-end">Pourcentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set total = usersByRole|reduce((sum, user) => sum + user.count, 0) %}
                                    {% for user in usersByRole %}
                                        <tr>
                                            <td>{{ user.role|replace({'_': ' '})|title }}</td>
                                            <td class="text-end">{{ user.count }}</td>
                                            <td class="text-end">
                                                {% if total > 0 %}
                                                    {{ ((user.count / total) * 100)|round(1) }}%
                                                {% else %}
                                                    0%
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="text-center">Aucune donnée disponible</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <th>Total</th>
                                        <th class="text-end">{{ total }}</th>
                                        <th class="text-end">100%</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-12">
                        <h6>Inscriptions par mois</h6>
                        <div style="height: 250px;">
                            <canvas id="userRegistrationsChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les détails des utilisateurs -->
<div class="modal fade" id="usersDetailsModal" tabindex="-1" aria-labelledby="usersDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="usersDetailsModalLabel">Détails des utilisateurs par rôle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Rôle</th>
                                <th class="text-end">Nombre</th>
                                <th class="text-end">Pourcentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set totalUsers = usersByRole|reduce((sum, item) => sum + item.count, 0) %}
                            {% for item in usersByRole|sort((a, b) => b.count <=> a.count) %}
                                <tr>
