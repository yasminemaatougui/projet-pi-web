        </div>
    </div>
    </div>

    <!-- Section des statistiques détaillées -->
    <div id="detailedStats" class="card mt-4" style="display: none;">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Statistiques détaillées des réservations</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Répartition par statut</h5>
                    <canvas id="statusChart"></canvas>
                </div>
                <div class="col-md-6">
                    <h5>Détails des réservations</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Statut</th>
                                    <th class="text-end">Nombre</th>
                                    <th class="text-end">Pourcentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set total = reservationsByStatus|reduce((sum, item) => sum + item.count, 0) %}
                                {% for item in reservationsByStatus %}
                                <tr>
                                    <td>{{ item.status }}</td>
                                    <td class="text-end">{{ item.count }}</td>
                                    <td class="text-end">{{ total > 0 ? ((item.count / total) * 100)|number_format(1) : 0 }}%</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function showUserStats() {
            const modal = new bootstrap.Modal(document.getElementById('userStatsModal'));
            
            // Données réelles des inscriptions mensuelles
            const monthlyData = {{ monthlyRegistrations|json_encode|raw }};
            const registrationData = {
                labels: monthlyData.map(item => item.month),
                datasets: [{
                    label: 'Inscriptions',
                    data: monthlyData.map(item => item.count),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true
                }]
            };
            
            console.log('Données mensuelles:', registrationData); // Pour le débogage

            // Initialiser le graphique des rôles utilisateurs
            const roleCtx = document.getElementById('userRoleChart').getContext('2d');
            new Chart(roleCtx, {
                type: 'doughnut',
                data: {
                    labels: {{ usersByRole|map(u => u.role|replace({'_': ' '})|title)|json_encode|raw }},
                    datasets: [{
                        data: {{ usersByRole|map(u => u.count)|json_encode|raw }},
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });

            // Initialiser le graphique des inscriptions par mois
            const regCtx = document.getElementById('userRegistrationsChart').getContext('2d');
            new Chart(regCtx, {
                type: 'line',
                data: registrationData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 5
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false
                        }
                    }
                }
            });
            
            modal.show();
        }
        
        function toggleStats() {
            const statsSection = document.getElementById('detailedStats');
            const button = document.getElementById('toggleStatsBtn');
            
            if (statsSection.style.display === 'none') {
                statsSection.style.display = 'block';
                button.innerHTML = '<i class="fas fa-times"></i> Masquer les statistiques';
                // Initialiser le graphique quand il devient visible
                initStatusChart();
            } else {
                statsSection.style.display = 'none';
                button.innerHTML = '<i class="fas fa-chart-bar"></i> Voir les statistiques';
            }
        }
        
        function initStatusChart() {
            const ctx = document.getElementById('statusChart').getContext('2d');
            const statusData = {{ reservationsByStatus|json_encode|raw }};
            
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: statusData.map(item => item.status),
                    datasets: [{
                        data: statusData.map(item => item.count),
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { 
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = total > 0 ? Math.round((value / total) * 100) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }
        document.addEventListener('DOMContentLoaded', function() {
            // Graphique des réservations
            const reservationsCtx = document.getElementById('reservationsChart');
            if (reservationsCtx) {
                new Chart(reservationsCtx, {
                    type: 'doughnut',
                    data: {
                        labels: {{ (reservationsByStatus|default([]))|map(r => r.status)|json_encode|raw }},
                        datasets: [{
                            data: {{ (reservationsByStatus|default([]))|map(r => r.count)|json_encode|raw }},
                            backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b']
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        }
                    }
                });
            }

            // Graphique des utilisateurs par rôle
            const usersCtx = document.getElementById('usersChart');
            if (usersCtx) {
                new Chart(usersCtx, {
                    type: 'pie',
                    data: {
                        labels: {{ (usersByRole|default([]))|map(u => u.role|replace({'ROLE_': '', '_': ' '})|title)|json_encode|raw }},
                        datasets: [{
                            data: {{ (usersByRole|default([]))|map(u => u.count)|json_encode|raw }},
                            backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e']
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
