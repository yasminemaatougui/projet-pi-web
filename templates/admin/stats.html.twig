                                    <td class="text-end">{{ item.count|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end">{{ totalUsers > 0 ? ((item.count / totalUsers) * 100)|number_format(2, ',', ' ') }}%</td>
                                </tr>
                            {% endfor %}
                            <tr class="table-active fw-bold">
                                <td>Total</td>
                                <td class="text-end">{{ totalUsers|number_format(0, ',', ' ') }}</td>
                                <td class="text-end">100%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
