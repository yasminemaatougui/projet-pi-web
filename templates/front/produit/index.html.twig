{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <h1>Boutique Solidaire</h1>
    <p class="lead">Achetez nos produits pour soutenir notre cause !</p>

    <div class="row mt-4">
        {% for produit in produits %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- Placeholder for Image -->
                    <div class="bg-light text-center py-5">
                        <i class="fas fa-box-open fa-3x text-secondary"></i>
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text text-muted flex-grow-1">{{ produit.description|slice(0, 100) }}...</p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 mb-0 text-primary">{{ produit.prix }} TND</span>
                            {% if produit.stock > 0 %}
                                <span class="badge bg-success">En stock</span>
                            {% else %}
                                <span class="badge bg-danger">Rupture de stock</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-grid">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-primary">Voir d√©tails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">Aucun produit disponible pour le moment.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
