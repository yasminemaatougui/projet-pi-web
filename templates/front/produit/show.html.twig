{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
             <div class="bg-light text-center py-5 rounded mb-3">
                <i class="fas fa-box-open fa-5x text-secondary"></i>
            </div>
        </div>
        <div class="col-md-6">
            <h1>{{ produit.nom }}</h1>
            <h3 class="text-primary my-3">{{ produit.prix }} TND</h3>
            
            <p class="lead">{{ produit.description }}</p>

            <div class="my-4">
                <strong>Stock disponible:</strong>
                {% if produit.stock > 0 %}
                    <span class="text-success">{{ produit.stock }} unités</span>
                {% else %}
                    <span class="text-danger">Épuisé</span>
                {% endif %}
            </div>

            {% if app.user %}
                {% if produit.stock > 0 %}
                    <form action="{{ path('app_produit_commander', {'id': produit.id}) }}" method="post">
                        <button class="btn btn-success btn-lg w-100">
                            <i class="fas fa-shopping-cart me-2"></i> Commander maintenant
                        </button>
                    </form>
                {% else %}
                    <button class="btn btn-secondary btn-lg w-100" disabled>Rupture de stock</button>
                {% endif %}
            {% else %}
                <a href="{{ path('login') }}" class="btn btn-primary btn-lg w-100">Connectez-vous pour acheter</a>
            {% endif %}

            <div class="mt-3">
                <a href="{{ path('app_produit_index') }}">← Retour à la boutique</a>
            </div>
        </div>
    </div>
{% endblock %}
