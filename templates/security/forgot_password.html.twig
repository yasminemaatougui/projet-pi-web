{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublie{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="h4 mb-3">Mot de passe oublie</h2>
                <p class="text-muted mb-4">Entrez votre email pour recevoir un code de verification.</p>

                <form method="post" novalidate>
                    <div class="mb-3">
                        <label for="resetEmail" class="form-label">Email</label>
                        <input
                            type="email"
                            id="resetEmail"
                            name="email"
                            class="form-control"
                            placeholder="votre.email@example.com"
                            autocomplete="email"
                        >
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Envoyer le code</button>
                        <a href="{{ path('login') }}" class="btn btn-outline-secondary">Retour a la connexion</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
